{% extends "layout.j2" %}

{% set page = "eq-subcatalog" %}

{% block content %}
  <main class="page-main">
    <div class="container">
      <div class="breadcumbs">
        <ul class="breadcumbs__list">
          <li class="breadcumbs__item">
            <a class="breadcumbs__link" href="./index.html">Главная</a>
          </li>
          <li class="breadcumbs__item">
            <a class="breadcumbs__link" href="./eq-catalog.html">Оборудование</a>
          </li>
          <li class="breadcumbs__item">
            <span class="breadcumbs__link breadcumbs__link--current">Серверное оборудование</span>
          </li>
        </ul>
      </div>
    </div>

    {% set EQ_CARDS_NUM = 6 %}
    {% set CATEGORIES = [
      "Процессоры",
      "Блоки питания",
      "Вентиляторы",
      "Дисковые корзины",
      "Жесткие диски и SDD",
      "Контроллеры"
    ] %}
    <section class="eq-catalog">
      <div class="container">
        <div class="eq-catalog__content">
          <h1 class="visually-hidden">Каталог оборудования</h1>
          <ul class="eq-catalog__list">
            {% for cardIndex in range(EQ_CARDS_NUM) %}
              <li class="eq-catalog__list-item eq-card">
                <div class="eq-card__content">
                  <div class="eq-card__image-wrapper">
                    <picture>
                      <source type="image/webp" srcset="@img/cards/eq-card-{{ (cardIndex % 2) + 1 }}.webp 1x">
                      <img class="eq-card__image" src="@img/cards/eq-card-{{ (cardIndex % 2) + 1 }}.jpg" alt="" width="347" height="225" loading="lazy">
                    </picture>
                    <a class="eq-card__image-link" href="category-catalog.html"></a>
                  </div>
                  <a class="eq-card__title" href="category-catalog.html">{{CATEGORIES[cardIndex]}}</a>
                </div>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </section>

  </main>
{% endblock content %}

{% block modal %}

{% endblock %}

{% block js %}
  <script src="./js/main.min.js"></script>
{% endblock %}
