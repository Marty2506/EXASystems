            <li class="import-replacement__item">
              <div class="equipment-card">
                <div class="equipment-card__content">
                  <a class="equipment-card__title" href="./catalog.html">Компьютеры, моноблоки, ПК</a>
                  <ul class="equipment-card__vendors">
                    <li class="equipment-card__vendor">
                      <a class="equipment-card__vendor-link" href="./vendor-page.html">iRU</a>
                    </li>
                    <li class="equipment-card__vendor">
                      <a class="equipment-card__vendor-link" href="./vendor-page.html">RDW Computers</a>
                    </li>
                  </ul>
                  <a class="equipment-card__button button" href="./catalog.html">Перейти в раздел</a>
                </div>
                <img class="equipment-card__image" src="@img/equipment-card-computers.png" alt="" style="top: 20px; right: -10px">
              </div>
            </li>
          </ul>
        </div>
      </div>
    </section>

  </main>
{% endblock content %}

